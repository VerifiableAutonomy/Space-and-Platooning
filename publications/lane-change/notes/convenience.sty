\newcommand{\createlanes}[2][1.5]{

 \coordinate (lane width) at (0,#1);
 \coordinate (begin segm) at (0,0);
 \coordinate (end segm) at (\linewidth-.5em,0);
 \coordinate (mid segm) at ($ (begin segm)!.5!(end segm) $);
 
 \draw[lane border] (begin segm) -- (end segm);
 \foreach \lane in {1, ..., #2} {
  \coordinate (begin lane \lane) at ($ (begin segm) + \lane*(lane width) - .5*(lane width) $);
  \coordinate (mid lane \lane) at ($ (mid segm) + \lane*(lane width) - .5*(lane width) $);
  \coordinate (end lane \lane) at ($ (end segm) + \lane*(lane width) - .5*(lane width) $);
  \draw[lane border] ($ (begin segm) + \lane*(lane width) $) -- ($ (end segm) + \lane*(lane width) $);

  \coordinate (left lane \lane) at ($ (begin lane \lane) + .5*(lane width) $);
  \coordinate (right lane \lane) at ($ (begin lane \lane) - .5*(lane width) $);
 }
}


